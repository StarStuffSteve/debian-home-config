FROM debian:stretch

WORKDIR /root

RUN apt update && apt install -y git 

ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en 
ENV LC_ALL en_US.UTF-8

RUN git clone https://github.com/StarStuffSteve/debian-home-config.git 
RUN cp -r /root/debian-home-config/.[a-zA-Z0-9]* /root
RUN rm -rf debian-home-config
RUN ls -lash
RUN /root/.setup_home.sh

EXPOSE 80
EXPOSE 443
EXPOSE 22

CMD ["/bin/zsh"]
